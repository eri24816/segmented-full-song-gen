            "justMyCode": false
        },
        {
            "name": "Python: Eval token based",
            "type": "debugpy",
            "request": "launch",
            "program": "eval.py",
            "args": [
                "--task",
                "vae",
                "--model_config",
                "config/model_vae.py",
                "--dataset_config",
                "config/dataset_vae.py",
                "--pretrained_ckpt_path",
                "wandb/run-20250322_222345-152h9pzx/files/checkpoints/epoch=1-step=300000.ckpt",
                "--num_samples",
                "5"
            ]
        },
        {
            "name": "Python Debugger: Attach using Process Id",
            "type": "debugpy",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },
        {
            "name": "Python: Debug Tests",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "purpose": [
                "debug-test"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTEST_ADDOPTS": "--no-cov -n0 --dist no"
