        {
            "name": "Python: Train latent diff",
            "type": "debugpy",
            "request": "launch",
            "program": "train.py",
            "env": {
                "CUDA_VISIBLE_DEVICES": "1",
            },
            "args": [
                "--model_config",
                "config/simple_ar/model_simple_ar.yaml",
