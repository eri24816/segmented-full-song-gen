                "--save_dir",
                ".",
                "-g",
                "segment_full_song",
                "--num_workers",
                "0",
                "--bar_embedder_ckpt_path",
                "wandb/run-20250601_205248-blpkxl0m/files/checkpoints/epoch=2-step=400000.safetensors"
